    "push": "git push origin master && git push origin --tags"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "peerDependencies": {
    "@hapi/hapi": "17.x.x"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "@hapi/hapi": "^17.0.1",
    "jest": "^23.5.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8.9.0"
          }
        }
      ]
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
